@import "normalize.styl"
body {
	position relative
	background-color #CCCCCC
}

a {
	cursor: pointer;
}

.wrapper {
	position: absolute;
	z-index: 1;
	top: 0;
	width: 100%;
	overflow: hidden;
	max-width 640px
	left 0
	right 0
	margin auto
	height 100vh
	.scroller {
		position absolute
		width 100%
		$height = 3rem
		.top-tips, .bot-tips {
			height $height
			line-height $height
			text-align center
			font-size 0.7rem
			background-color #CCCCCC
			color #606060
		}
		.top-tips {
			position absolute
			top -($height)
			max-width 640px
			left 0
			right 0
			margin auto
		}
		
		.swiper {
			width: 100%;
			height: 11rem;
			margin-bottom: 0;
		}
	}
	.gameListDiv {
		background-color #ffffff
		width: 100%;
		.gameDiv {
			height: 4.2rem;
			line-height: 4.2rem;
			width: 100%;
			.gameImgDiv {
				padding: 13px 6px 11px 13px;
				float: left;
				line-height: 0;
				width: auto; /*24.75%;*/
				height: 100%;
				box-sizing border-box
				.gameImg {
					width: 2.6rem;
					height: 2.6rem;
					border-radius: 15px;
					line-height: 0;
				}
			}
			.gameInfoDiv {
				width: 48%;
				line-height: 16px;
				float: left;
				height: 100%;
				padding: 0.3rem 0;
				position: relative;
				margin-left 0.4rem
				.gameName {
					font-size: 0.78rem;
					color: #4A4A49;
					position: absolute;
					top: 2%;
				}
				.gameDes {
					font-size: 12px;
					color: #7B7C7D;
					text-overflow: ellipsis;
					overflow: hidden;
					width: 100%;
					display: -webkit-box;
					-webkit-box-orient: vertical;
					-webkit-line-clamp: 2;
					position: absolute;
					bottom: 11%;
					
				}
			}
			.startGameDiv {
				float: right;
				width: 3.7rem;
				text-align: center;
				.btnStartGame {
					display: inline-block;
					border: 1px solid rgb(103, 38, 81);
					width: 80%;
					line-height: normal;
					font-size: 0.7rem;
					padding: 6% 0;
					color: rgb(161, 133, 147);
					border-radius: 4px;
				}
			}
			
		}
	}
	.refresh-success-tips {
		$h = 1.2rem
		position absolute
		z-index 999
		height $h
		background-color #000000
		line-height: $h;
		text-align: center;
		width 100%
		font-size: 12px;
		background: rgba(7, 17, 27, 0.7);
		max-width 640px
		left 0
		right 0
		margin auto
		color #ffffff
		display none
		
	}
	.bot-tips {
		position absolute
		bottom -3rem
		max-width 640px
		left 0
		right 0
		margin auto
	}
	
}